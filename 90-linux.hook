[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = boot/zImage
Target = usr/lib/initcpio/*

[Action]
Description = Updating %PKGBASE% initcpios...
When = PostTransaction
Exec = /usr/bin/sh -ce "/usr/bin/mkinitcpio -p %PKGBASE% && cp -af /boot/initramfs-%PKGBASE%.img /boot/uInitrd"
